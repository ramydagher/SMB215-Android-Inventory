<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="smb215.isae.inventory" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/inventory"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:name=".main"
            android:icon="@drawable/customers"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".customerListView"
            android:label="@string/title_activity_customer_view" >
        </activity>
        <activity
            android:name=".customerView"
            android:label="@string/title_activity_customer_details" >
        </activity>
        <activity
            android:name=".customerEdit"
            android:label="@string/title_activity_customer_edit" >
        </activity>

        <activity
            android:name=".supplierListView"
            android:label="@string/title_activity_supplier_view" >
        </activity>
        <activity
            android:name=".supplierView"
            android:label="@string/title_activity_supplier_details" >
        </activity>
        <activity
            android:name=".supplierEdit"
            android:label="@string/title_activity_supplier_edit" >
        </activity>

        <activity
            android:name=".productLocationListView"
            android:label="@string/title_activity_location_view" >
        </activity>
        <activity
            android:name=".productLocationView"
            android:label="@string/title_activity_location_details" >
        </activity>
        <activity
            android:name=".productLocationEdit"
            android:label="@string/title_activity_customer_edit" >
        </activity>

        <activity
            android:name=".productListView"
            android:label="@string/title_activity_product_view" >
        </activity>
        <activity
            android:name=".productView"
            android:label="@string/title_activity_product_details" >
        </activity>
        <activity
            android:name=".productEdit"
            android:label="@string/title_activity_product_edit" >
        </activity>

    </application>

</manifest>
